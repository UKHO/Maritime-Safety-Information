@{
    Layout = "_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <!--left nav-->
            @if ((string)ViewData["Header"] == "Notice to Mariners")
            {
                <partial name="_NMLeftMenu"></partial>
            }
            else
            if ((string)ViewData["Header"] == "Radio Navigation Warnings")
            {
                <partial name="_RNWLeftMenu"></partial>
            }

        </div> <!--right content-->
        <div class="col-lg-8 col-md-10">
            <h1 id="headingLevelOne" class="mt-0">@ViewData["Header"]</h1>
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts
{
    @await RenderSectionAsync("Scripts", required: false)
}
