@using UKHO.MaritimeSafetyInformation.Common.Models.NoticesToMariners

@model List<ShowDailyFilesResponseModel>
<div class="daily-table-container scroll-bar">
    @if (Model != null && Model.Count > 0)
    {
        int count = 0;
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="table-responsive-sm">
                <table class="table table-scroll small-first-col notice-to-mariners-daily-table caption-table">
                    <caption class="table-caption" id="caption_@i">@Model[i].Year, week @Model[i].WeekNumber</caption>
                    <thead>
                        <tr>
                            <th scope="col">File name</th>
                            <th scope="col">File size</th>
                            <th class="th-3"><span class="visually-hidden">Action</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int j = 0; j < Model[i].DailyFilesData.Count; j++)
                        {
                            <tr>
                                <td id="filename_@count">@Model[i].DailyFilesData[j].FileDescription</td>
                                <td id="filesize_@count">@Model[i].DailyFilesData[j].FileSizeInKB (@Model[i].DailyFilesData[j].FileExtension)</td>
                                <td class="td-3 justify-content-center" id="download_@count">
                                    <a href="@Url.Action("DownloadDailyFile", "NoticesToMariners", new { batchId = @Model[i].DailyFilesData[j].BatchId,fileName=@Model[i].DailyFilesData[j].Filename, mimeType = @Model[i].DailyFilesData[j].MimeType })">Download</a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger" role="alert" aria-atomic="true">
            <i class="bi bi-exclamation-lg" aria-hidden="true"></i>
            <div class="alert-head">There’s a problem</div>
            <p>It looks like there might be a problem with our system. We’re sorry for the inconvenience. If the problem persists contact <a href="mailto:customerservices@ukho.gov.uk">customerservices@ukho.gov.uk</a></p>
        </div>
    }
</div>
