@using UKHO.MaritimeSafetyInformation.Common.Models.NoticesToMariners
@model List<ShowFilesResponseModel>
@{
    Layout = "~/Views/Shared/_MSILayout.cshtml";
    ViewData["Header"] = "Notices to Mariners";
    ViewData["Title"] = "Notices to Mariners - Annual";
}
<partial name="_NMHorizontalTab" />
@*<partial name="ShowAnnualNMs" model="@Model" />*@

<h4>
    Annual Summary of ADMIRALTY Notices to Mariners 2022 (NP247)
</h4>
<p>
    To supplement Weekly NMs, the UKHO produces an Annual Summary of Notices to Mariners (NP247). This publication contains the Annual Statutory Notices to Mariners Numbers 1-26, a summary of Temporary and Preliminary Notices to Mariners still in force at the start of the year, and a Cumulative Summary of Amendments to ADMIRALTY Sailing Directions.
</p>
<p>
    The paper version of the Annual Summary of Notices to Mariners is published annually in January, and copies are available by subscription from ADMIRALTY Chart Agents. To access the Annual Summary online, click on the links below.
</p>
<h4>
    Annual Notice to Mariners 1-26, 2022
</h4>
<p>
    This includes how to find sections which have now been moved into 'The Mariners Handbook'.
</p>
<div class="row">
    <div class="col">
        <div class="table-responsive" id="divAnnualNMs">
            <table width="100%">
                <thead>
                    <tr>
                        <th width="15%">Section</th>
                        <th width="55%">File name</th>
                        <th width="20%">File size</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td id="section_@i">@Model[i].Hash</td>
                            <td class="td-3 justify-content-center" id="FileName_@i">
                                <a target="_blank" aria-label="Download File for @Model[i].FileDescription. opens in new tab" href="@Url.Action("DownloadFile", "NoticesToMariners", new { fileName = @Model[i].Filename, batchId = @Model[i].BatchId, mimeType = @Model[i].MimeType, frequency ="Annual" })">@Model[i].FileDescription</a>
                            </td>
                            <td id="filesize_@i">@Model[i].FileSizeinKB (@Model[i].FileExtension)</td>
                            <td class="td-3 justify-content-center" id="download_@i">
                                <a target="_blank" aria-label="Download File for @Model[i].FileDescription. opens in new tab" href="@Url.Action("DownloadFile", "NoticesToMariners", new { fileName = @Model[i].Filename, batchId = @Model[i].BatchId, mimeType = @Model[i].MimeType, frequency ="Annual" })">Download</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
