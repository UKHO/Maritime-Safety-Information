@{
    ViewData["Title"] = "Maritime Safety Information";
    Layout = "~/Views/Shared/_MSILayout.cshtml";
}
@section Scripts
{
<script type="text/javascript" src="@Url.Content("~/js/Custom/RadioNavigationalWarnings.js")"></script>
}
<div class="container-fluid">
    <div class="row">
        @if (ViewData["ControllerName"]?.ToString() == "NoticesToMariners")
        {
            ViewData["Header"] = "Notices to Mariners";

            if (ViewData["ActionName"]?.ToString() == "Index" || ViewData["ActionName"]?.ToString() == "ShowDailyFiles"
            || ViewData["ActionName"]?.ToString() == "Cumulative" || ViewData["ActionName"]?.ToString() == "Annual")
            {
                <partial name="_NMHorizontalTab" />
            }
        }
        else if (ViewData["ControllerName"]?.ToString() == "RadioNavigationalWarnings")
        {
            ViewData["Header"] = "Radio Navigational Warnings";
            if (ViewData["ActionName"]?.ToString() == "Index")
            {
                <partial name="_RNWHorizontalTab" />
            }
            else if (ViewData["ActionName"]?.ToString() == "About")
            {
                ViewData["Header"] = "About";
            }
        }
        <div class="custom-error">
            <h1 class="mt-0">Sorry, there is a problem with the service</h1>
            <p class="intro-text">Please try again later</p>
            <p class="paragraph">
                If you need to talk to someone, please contact the customer service team at <a href="mailto:customerservices@ukho.gov.uk?subject=Maritime Safety Information Error with reference @Convert.ToString(ViewData["CurrentCorrelationId"])">customerservices@ukho.gov.uk</a>.
                <br />
                <br />
                Please use <span class="font-monospace fw-bold">@Convert.ToString(ViewData["CurrentCorrelationId"])</span> as your reference.
            </p>
        </div>
    </div>
</div>

