@model IEnumerable<UKHO.MaritimeSafetyInformation.Common.Models.RadioNavigationalWarning.RadioNavigationalWarningsData>

@{
    Layout = "~/Views/Shared/_MSILayout.cshtml";
    ViewData["Header"] = "Radio Navigational Warnings";
    ViewData["Title"] = "Radio Navigational Warnings";
}

@section Scripts
{
<script type="text/javascript" src="@Url.Content("~/js/Custom/RadioNavigationalWarnings.js")"></script>
}

<div id="rnwInfo" class="alert alert-primary p-4" role="alert">
    <i class="bi bi-exclamation-circle-fill" aria-hidden="true"></i>
    <div class="alert-head">Important information</div>
    <p>The following NAVAREA 1 and UK Coastal Warnings (WZs) were in force at: @ViewBag.LastModifiedDateTime</p>
</div>

<!--tabs-->
<ul class="nav nav-tabs msi-tabs" id="rnwTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a href="#allwarnings" class="nav-link active" id="allwarnings-tab" data-bs-toggle="tab" data-bs-target="#allwarnings" type="button" role="tab" aria-controls="allwarnings" aria-selected="false">All warnings</a>
    </li>
    <li class="nav-item" role="presentation">
        <a href="#navarea1" class="nav-link" id="NAVAREA1-tab" data-bs-toggle="tab" data-bs-target="#navarea1" type="button" role="tab" aria-controls="navarea1" aria-selected="false" tabindex="-1">NAVAREA 1</a>
    </li>
    <li class="nav-item" role="presentation">
        <a href="#ukcoastal" class="nav-link" id="ukcoastal-tab" data-bs-toggle="tab" data-bs-target="#ukcoastal" type="button" role="tab" aria-controls="ukcoastal" aria-selected="false" tabindex="-1">UK Coastal</a>
    </li>
</ul>
<div class="tab-content" id="rnwTabContent">
    <div class="tab-pane fade show active" id="allwarnings" role="tabpanel" aria-labelledby="allwarnings-tab">
        <div class="table-responsive-md">
            <table class="table table-scroll small-first-col rnw-allwarnings-table">
                <caption class="visually-hidden" id="rnwTableCaption" tabindex="-1">All warnings</caption>
                <thead>
                    <tr>
                        <th class="th-1" role="cell">
                            @Html.DisplayNameFor(model => model.Reference)
                        </th>
                        <th class="th-2" role="cell">
                            @Html.DisplayNameFor(model => model.DateTimeGroupRnwFormat)
                        </th>
                        <th role="cell">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th class="th-4 justify-content-center" role="cell">
                            <input type="button" id="select_button" class="select-all-button" value="Select all" onClick="do_Selection()" />
                        </th>
                        <th class="th-5 justify-content-center" role="cell">
                            Select
                        </th>
                    </tr>
                </thead>
                <tbody class="scroll-content scroll-bar accordianTable" id="accordionAllwarning">
                    @{
                        int i = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr class="@Html.DisplayFor(modelItem => item.WarningType[0])">
                            <td id="Id_@i" class="td-1" style="display:none">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td id="Reference_@i" class="td-1">
                                @Html.DisplayFor(modelItem => item.Reference)
                            </td>
                            <td id="DateTimeGroupRnwFormat_@i" class="td-2">
                                @Html.DisplayFor(modelItem => item.DateTimeGroupRnwFormat)
                            </td>
                            <td id="Description_@i">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td id="Viewdetails_@i" class="td-4 justify-content-center">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                                    <span class="visually-hidden">@Html.DisplayFor(modelItem => item.Reference)</span>
                                    <span class="view_details">View details </span>
                                </button>
                            </td>
                            <td id="checkbox_@i" class="td-5 justify-content-center">
                                <input id="selectCheckbox_@i" warning-id="@Html.DisplayFor(modelItem => item.Id)" type="checkbox" name="checkbox" class="form-check-input checkbox_warning" onchange="enableDisableShowSelection()" aria-labelledby="selectCheckboxLabel_@i" />
                                <label class="visually-hidden" id="selectCheckboxLabel_@i" for="selectCheckbox_@i">@Html.DisplayFor(modelItem => item.Reference) </label>
                            </td>
                        </tr>
                        <tr id="collapse_@i" class="accordion-collapse @Html.DisplayFor(modelItem => item.WarningType[0]) collapse" data-bs-parent="#accordionAllwarning">
                            <td colspan="5">
                                <div class="warning-detail">
                                    <section>
                                        <h1 id="Details_WarningType_@i" class="warning-type">
                                            @Html.DisplayFor(modelItem => item.WarningType)
                                        </h1>
                                        <h2 id="Details_Reference_@i" class="warning-reference">
                                            @Html.DisplayFor(modelItem => item.Reference)
                                        </h2>
                                        <h3 id="Details_DateTimeGroupRnwFormat_@i" class="warning-date-time">
                                            @Html.DisplayFor(modelItem => item.DateTimeGroupRnwFormat)
                                        </h3>
                                        <pre id="Details_Description_@i" class="warning-description">
                                            @Html.DisplayFor(modelItem => item.Content)
                                        </pre>
                                    </section>
                                </div>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col text-end">
            @using (Html.BeginForm("ShowSelection", "RadioNavigationalWarnings", FormMethod.Post))
            {
                <input type="hidden" id="showSelectionId" name="showSelectionId" value="">
                <button disabled="disabled" id="BtnShowSelection" type="submit" onclick="showSelection()">Show selection</button>
            }
        </div>
    </div>
</div>
