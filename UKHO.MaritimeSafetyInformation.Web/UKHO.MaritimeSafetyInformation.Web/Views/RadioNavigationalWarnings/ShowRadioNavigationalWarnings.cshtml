@model IEnumerable<UKHO.MaritimeSafetyInformation.Common.Models.RadioNavigationalWarning.RadioNavigationalWarningsData>

@{
    Layout = "~/Views/Shared/_MSILayout.cshtml";
}

@{
    ViewData["Header"] = "Radio Navigational Warnings";
}

<div id="rnwInfo" class="alert alert-primary p-4" role="alert">
    <i class="bi bi-exclamation-circle-fill" aria-hidden="true"></i>
    <div class="alert-head">Important information</div>
    <p>The following NAVAREA 1 and UK Coastal Warnings (WZs) were in force at: 141009 UTC April 22</p>
</div>

<!--tabs-->
<ul class="nav nav-tabs msi-tabs" id="rnwTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="allwarnings-tab" data-bs-toggle="tab" data-bs-target="#allwarnings" type="button" role="tab" aria-controls="allwarnings" aria-selected="true">All warnings</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="NAVAREA1-tab" data-bs-toggle="tab" data-bs-target="#" type="button" role="tab" aria-controls="NAVAREA1" aria-selected="false" tabindex="-1">NAVAREA 1</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="ukcoastal-tab" data-bs-toggle="tab" data-bs-target="#" type="button" role="tab" aria-controls="ukcoastal" aria-selected="false" tabindex="-1">UK Coastal</button>
    </li>
</ul>
<div class="tab-content" id="rnwTabContent">
    <div class="tab-pane fade show active" id="allwarnings" role="tabpanel" aria-labelledby="allwarnings-tab">
        <div class="table-responsive-md">
            <table class="table table-scroll small-first-col rnw-allwarnings-table">
                <caption class="hidden-caption">Radio Navigational Warnings All warnings</caption>
                <thead>
                    <tr>
                    @*    <th class="th-1" type=hidden>
                              @Html.DisplayNameFor(model => model.Id)
                        </th>*@
                        <th class="th-1">
                            @Html.DisplayNameFor(model => model.Reference)
                        </th>
                        <th class="th-2">
                            @Html.DisplayNameFor(model => model.DateTimeGroupRnwFormat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th class="th-4 justify-content-center">
                            <input type="button" id="select_button" class="select-all-button" value="Select all" onClick="do_Selection()"/>
                        </th>
                        <th class="th-5 justify-content-center">
                            Select
                        </th>
                    </tr>
                </thead>
                <tbody class="scroll-content scroll-bar accordianTable" id="accordionAllwarning">
                    @{int i = 0;}
                    @foreach (var item in Model) {
                        <tr>
                          @*  <td id="Id_@i" class="td-1" type=hidden>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>*@
                            <td id="Reference_@i" class="td-1">
                                @Html.DisplayFor(modelItem => item.Reference)
                            </td>
                            <td id="DateTimeGroupRnwFormat_@i" class="td-2">
                                @Html.DisplayFor(modelItem => item.DateTimeGroupRnwFormat)
                            </td>
                            <td id="Description_@i">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td id="Viewdetails_@i" class="td-4 justify-content-center">
                                   <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                                    details
                                </button>
                            </td>
                            <td id="checkbox_@i" class="td-5 justify-content-center">
                                <input type="checkbox" name="checkbox" class="form-check-input" aria-label="Select" />
                            </td>
                        </tr>
                        <tr id="collapse_@i" class="accordion-collapse collapse" data-bs-parent="#accordionAllwarning">
                            <td colspan="5">                          
                                <div class="warning-detail">
                                    <section>
                                        <h1 id="Details_WarningType_@i" class="warning-type">
                                            @Html.DisplayFor(modelItem => item.WarningType)
                                        </h1>
                                        <h2 id="Details_Reference_@i" class="warning-reference">
                                            @Html.DisplayFor(modelItem => item.Reference)
                                        </h2>
                                        <h3 id="Details_DateTimeGroupRnwFormat_@i" class="warning-date-time">
                                            @Html.DisplayFor(modelItem => item.DateTimeGroupRnwFormat)
                                        </h3>
                                        <pre id="Details_Description_@i" class="warning-description">
                                            @Html.DisplayFor(modelItem => item.Content)
                                        </pre>
                                    </section>
                                </div>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>        
    </div>
    <div class="row">
       <div class="col text-end">
           @*<button id="BtnShowSelection" type="button" onclick = "modelId()" >Show selection</button>*@
           <a href="@Url.Action("ShowSelection", "RadioNavigationalWarnings")" type="button">
            Show selection </a>
        </div>
       
    </div>
    <div class="tab-pane fade" id="NAVAREA1" role="tabpanel" aria-labelledby="NAVAREA1-tab">
        NAVAREA 1
    </div>
    <div class="tab-pane fade" id="ukcoastal" role="tabpanel" aria-labelledby="ukcoastal-tab">
        UK Coastal
    </div>
</div>
