@using UKHO.MaritimeSafetyInformation.Common.Models.RNW;
@model RadioNavigationalWarningsAdminList

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RadioNavigationalWarnings.FirstOrDefault().WarningType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RadioNavigationalWarnings.FirstOrDefault().Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RadioNavigationalWarnings.FirstOrDefault().DateTimeGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RadioNavigationalWarnings.FirstOrDefault().Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RadioNavigationalWarnings.FirstOrDefault().Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RadioNavigationalWarnings.FirstOrDefault().ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RadioNavigationalWarnings.FirstOrDefault().IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RadioNavigationalWarnings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WarningType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
